   doi = {10.1080/23254823.2017.1414620},
   issn = {23254815},
   issue = {4},
   journal = {European Journal of Cultural and Political Sociology},
   title = {Populist knowledge: ‘Post-truth’ repertoires of contesting epistemic authorities},
